{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "removeComments": false,
    "noResolve": false,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noUnusedLocals": false,
    "suppressExcessPropertyErrors": true,
    "sourceMap": false,
    "outDir": "./dist",
    "allowJs": true,
    "lib": [
      "dom",
      "es2016"
    ]
  },
  "compileOnSave": true,
  "include": [
    "declarations/**/*.d.ts",
    "typings/**/*.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules",
    "libs",
    "src/deprecated"
  ]
}
